@page "/rsatest"
@inherits BlazorAppSecurityExamen.Pages.RsaTestBase
@rendermode InteractiveServer

<!-- Display Public Key -->
<div>
    <h4>Public Key:</h4>
    <div style="
        border: 1px solid #ccc;
        padding: 10px;
        border-radius: 6px;
        background-color: #f9f9f9;
        white-space: pre-wrap;
        word-break: break-word;
        font-family: inherit;
        font-weight: bold;
    ">
        @publicKey
    </div>
</div>



<h3>RSA Encryption & Signature Test</h3>

<div class="mb-3">
    <label>Message:</label>
    <input class="form-control" @bind="message" />
</div>

<button class="btn btn-primary me-2" @onclick="EncryptMessage">Encrypt</button>
<button class="btn btn-secondary me-2" @onclick="DecryptMessage">Decrypt</button>
<button class="btn btn-success me-2" @onclick="SignMessage">Sign</button>
<button class="btn btn-info" @onclick="VerifySignature">Verify</button>

<hr />

<p><strong>Encrypted:</strong> @encrypted</p>
<p><strong>Decrypted:</strong> @decrypted</p>
<p><strong>Signature:</strong> @signature</p>
<p><strong>Signature Valid:</strong> @signatureValidText</p>
